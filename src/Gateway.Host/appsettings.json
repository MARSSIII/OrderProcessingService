{
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000",
        "Protocols": "Http2"
      }
    }
  },
  "ConfigurationClient": {
    "BaseAddress": "http://localhost:8081",
    "PageSize": 100
  },
  "Kafka": {
    "BootstrapServers": "localhost:8001",
    "Publisher": {
      "TimeoutMs": 5000,
      "Idempotent": true,
      "ClientId": "order-service-producer",
      "Topic": "order_creation"
    },
    "Subscriptions": {
      "OrderProcessing": {
        "Topic": "order_processing",
        "GroupId": "order-service-consumer-group",
        "ClientId": "order-service-consumer",
        "ChannelCapacity": 1000,
        "MaxBatchSize": 100,
        "MaxBatchDelayMs": 1000,
        "PollTimeoutMs": 50
      }
    }
  }
}
